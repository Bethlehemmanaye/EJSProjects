<%- include('./partials/header'); -%>

    <h1>
        Compose</h1>
    <form class="itemlist" action="/compose" method="post">
        <div class="form-group">
            <label for="formGroupExampleInput">Title</label>
            <input type="text" name="postItem" class="form-control" id="formGroupExampleInput" placeholder="">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Post</label>
            <textarea class="form-control" name="postBody" id="exampleFormControlTextarea1" rows="5"></textarea>
        </div>

        <button type="submit" name="button" class="btn btn-info">Publish</button>
    </form>
